{{ template "theme/partials/head.html" . }}
<body>
{{ $current_author := .Title | lower}}
{{ $this_author := index .Site.Data.authors $current_author }}

  <div class="content container">

    <div class="author-bio">

        {{with $this_author.avatar}}<img class="pull-left" src="{{.}}" alt="{{$current_author}}"/>{{end}}

        <div class="social-nav pull-right">
            {{with $this_author.facebook}}<a href="{{.}}"> <i class="fa fa-facebook-square"></i> </a>{{end }}
            {{with $this_author.twitter}}<a href="{{.}}"> <i class="fa fa-twitter-square"></i> </a>{{end }}
            {{with $this_author.github }}<a href="{{.}}"> <i class="fa fa-github-square"></i> </a>{{end}}
        </div>
        <h1>{{ with $this_author.display_name}} {{.}} {{else}} {{$current_author}} {{end}}</h1>
        <p>{{$this_author.bio}}</p>
    </div>

    <hr class="clear"/>

    <h2>Posts by this author</h2>

      <ol class="posts">
          {{ range .Data.Pages }}
                {{ if eq .Section "post" }}
                    <li class="clear" ><a href="{{ .Permalink }}">{{ .Title }}</a><time class="pull-right post-list">{{ .Date.Format "Jan 2, 2006" }}</time></li>
                {{end}}
          {{end}}
      </ol>

  </div>

{{ template "theme/partials/sidebar.html" . }}
{{ template "theme/partials/footer.html" . }}
